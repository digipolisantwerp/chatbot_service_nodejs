{
  "name": "@acpaas-ui-widgets/nodejs-chatbot",
  "version": "2.1.0",
  "description": "Chatbot Smart Widget BFF package (Node)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "nodemon",
    "clean": "rimraf dist coverage",
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "tslint -c tslint.json 'src/**/**/*.ts'",
    "test": "jest --coverage",
    "test:istanbul": "node_modules/.bin/istanbul cover ./node_modules/jasmine-node/bin/jasmine-node test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trianglejuice/chatbot_service_angular.git"
  },
  "author": {
    "name": "Jasper Van Proeyen",
    "email": "jasper.vanproeyen@digipolis.be"
  },
  "license": "MIT",
  "dependencies": {
    "@types/joi": "^13.0.8",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv-safe": "^5.0.1",
    "express": "^4.16.3",
    "joi": "^13.3.0",
    "lodash": "^4.17.10",
    "nodemon": "^1.17.5",
    "request": "^2.85.0",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/cors": "~2.8.3",
    "@types/dotenv-safe": "~4.0.1",
    "@types/express": "^4.11.1",
    "@types/jest": "23.3.2",
    "@types/node": "^9.6.5",
    "@types/supertest": "^2.0.4",
    "jasmine-growl-reporter": "^1.0.1",
    "jasmine-node": "^1.14.5",
    "jest": "^23.6.0",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2"
  },
  "publishConfig": {
    "registry": "https://nexusrepo.antwerpen.be/repository/npm-private/"
  },
  "jest": {
    "verbose": true,
    "notify": false,
    "testRegex": "/tests/.*\\.(ts|tsx|js)$",
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/__mocks__/*",
      "tests/test.config.ts"
    ],
    "setupFiles": [
      "<rootDir>/tests/test.config.ts"
    ],
    "roots": [
      "<rootDir>",
      "<rootDir>/tests/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/app.ts",
      "src/server.ts",
      "src/lib/logger.ts",
      "src/config"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
